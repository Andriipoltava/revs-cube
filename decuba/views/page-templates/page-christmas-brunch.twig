    {% include 'organisms/christmas-brunch-packages.twig' %}

    <section class="">
        {% set gallery_slides = [{
            'image' : {
                'url': site.theme.link~'/app/img/brunch/mojito.jpg',
                'alt': 'Image 1',
                'title': 'Virtual Cocktail Masterclass',
                'text': 'Let our cantineros teach you the incredible stories of rum and how to make some tasty classic cocktails, all done online from the comfort of your own home.',
            },
        },{
            'image' : {
                'url': site.theme.link~'/app/img/brunch/zombie.jpg',
                'alt': 'Image 2',
                'title': 'At Table Masterclass',
                'text': 'Learn how to make some of our classic cocktails in a COVID-safe version of our famous Cocktail Masterclass, done at your table.',
