    <style>
        .owl-carousel .owl-item img {
            height: 20rem;
            object-fit: cover;
        }

        @media only screen and (min-width: 768px) {
            .owl-carousel .owl-item img {
                height: 35rem;
            }
        }

        .christmas-local-about__left {
            justify-content: left;
            flex-basis: 35%;
        }

        .christmas-local-about__left .christmas-local-about__title {
            background: url(../../wp-content/themes/decuba/app/img/brunch/bottomless-heading.svg) no-repeat left / contain;
            width: 320px;
            height: 100px;
            margin-bottom: 30px !important;
            max-width: 320px;
            text-indent: -9999px;
        }

        @media only screen and (min-width: 1000px) {
            .christmas-local-about__left .christmas-local-about__title {
                background: url(../../app/themes/decuba/app/img/brunch/underline.svg) no-repeat center / contain;
                background: none;
                font-size: 4rem;
                width: auto;
                height: auto;
                margin-bottom: 0 !important;
                max-width: none;
                text-indent: 0;
            }
        }

        .christmas-local-about__right {
            padding-top: 1rem;
        }

        .christmas-local-about__right p {
            font-size: 20px !important;
        }

        .brunch-info-bg {
            background: url(../../app/themes/decuba/app/img/brunch/brunch-info-bg.png) no-repeat left / contain;
            width: 247px;
            height: 614px;
            z-index: 50;
        }

        .christmas-local-about__img__br {
            display: none;
        }

        @media only screen and (min-width: 1000px) {
            .christmas-local-about__img__br {
                background-image: url(../../wp-content/themes/decuba/app/img/tmp/brunch_da_loca.jpg);
                width: 26%;
                height: 100%;
                position: absolute;
                background-repeat: no-repeat;
                top: 88px;
            }
        }

        .christmas-local-about__img__br {
            background-image: url(../../wp-content/themes/decuba/app/img/tmp/brunch_da_loca.jpg);
            width: 26%;
            height: 100%;
            position: absolute;
            background-repeat: no-repeat;
            top: 88px;
        }

        .page-template-page-christmas-brunch .packages-item-info-subsection {
            flex-basis: 80%;
        }

        .page-template-page-christmas-brunch .packages-item-info-buttons {
            justify-content: flex-start;
        }

        @media only screen and (min-width: 1000px) {
            .page-template-page-christmas-brunch .packages-item-info-buttons {
                justify-content: flex-start;
            }
        }

        .page-template-page-christmas-brunch .packages-item-info-buttons .button {
            font-size: 14px;
            min-width: 150px !important;
        }

        @media only screen and (min-width: 1000px) {
            .page-template-page-christmas-brunch .packages-item-info-buttons .button {
                font-size: 16px;
            }
        }
    </style>

    <script type="text/javascript">
        const branchSlider = () => {
            if (document.querySelectorAll('.christmas-gallery--celebration  .christmas-gallery--celebration__text_container')) {
                var h = 0;
                document.querySelectorAll('.christmas-gallery--celebration  .christmas-gallery--celebration__text_container').forEach(function (value) {
                    value.style.minHeight = 'auto';
                    value.style.overflow = 'unset';
                    h = value.clientHeight +50 > h ? value.clientHeight +50 : h;
                })
                document.querySelectorAll('.christmas-gallery--celebration  .christmas-gallery--celebration__text_container').forEach(function (value) {
                    value.style.minHeight = h + "px";
                })
                setTimeout(function () {
                    var h = 0;
                    document.querySelectorAll('.christmas-gallery--celebration  .christmas-gallery--celebration__text_container').forEach(function (value) {
                        value.style.minHeight = 'auto';
                        value.style.overflow = 'unset';
                        h = value.clientHeight +50 > h ? value.clientHeight +50 : h;                    })
                    document.querySelectorAll('.christmas-gallery--celebration  .christmas-gallery--celebration__text_container').forEach(function (value) {
                        value.style.minHeight = h + "px";
                    })
                },500)
            }
        }
        document.addEventListener('DOMContentLoaded', branchSlider);
        window.addEventListener('resize', branchSlider, true);
    </script>

{% endblock %}