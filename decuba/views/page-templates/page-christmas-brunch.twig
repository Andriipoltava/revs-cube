                },
                settings : {
                    'title': 'Book Now',
                    'form_id' : 'book',
                    'form_name' : 'book',
                    'minimum_booking_type_options' : true,
                    'layout' : 'full'
                },
                'large': true
            } %}
		</div>
	</div>

