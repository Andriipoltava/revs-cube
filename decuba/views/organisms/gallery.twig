                                    <div class="christmas-gallery--celebration__text {% if image.image.extra_class %}{{ image.image.extra_class }}{% else %} normal-slide {% endif %}">
                                        {{ image.image.text }}
                                    </div>
                                    <div class="christmas-gallery--celebration__button" style="bottom: 10px;">
                                        {% include 'atoms/button.twig' with {
                                            'type': 'regular',
                                            'text': image.image.cta_text,
                                            'color': 'fuschia',
                                            'link_type': 'internal',
                                            'external_link': '',
                                            'internal_link': image.image.cta_url,
                                        } %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div id="slider_celebration_counter"></div>
                    {% if images|length > 1 %}
                        <ul class="dots christmas__celebration__gallery-dots">
                            <li class="dots__arrow dots__arrow__ch--prev">
                                <span class="icon-arrow-left"></span>
                            </li>
                            {% for i in 1..(images|length) %}
                                <li class="dots__single {% if loop.first %}active{% endif %}"
                                    data-gallery-dot="{{ loop.index0 }}"></li>
                            {% endfor %}
                            <li class="dots__arrow dots__arrow__ch--next">
                                <span class="icon-arrow-right"></span>
                            </li>
                        </ul>

                        {#                        <div class="icon-hand-gesture"></div>
                        #}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
