                                <div class="christmas-gallery--celebration__item">
                                    <picture>
                                        <source srcset="{{ image.image.url }}" media="(min-width: 768px)"/>
                                        <img srcset="{% if image.image_mobile.url %}{{ image.image_mobile.url }}{% else %}{{ image.image.url }}{% endif %}"
