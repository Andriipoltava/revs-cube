{% if type == 'large' %}
    <div class="gallery--large__container {% if images|length <= 1 %}gallery--large__container--single{% endif %}">

        {% if post.type == 'bar' and post.get_field('intro_text__title') %}
            <section class="single-bar__intro">
                <div class="container single-bar__intro__container">
                    <div class="row">
                        <div class="single-bar__intro__left">
                            <h2 class="single-bar__intro__title">
                                {% if post.get_field('intro_text__flair_has_flair') %}
                                    <span class="color--skyblue">{{ post.get_field('intro_text__flair_flair__text') }}</span>
                                {% endif %}

                                {{ post.get_field('intro_text__title') }}
                            </h2>
                        </div>
                        <div class="single-bar__intro__right">
                            {{ post.get_field('intro_text__content') }}
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}

        <div class="container">
            {% if page=="christmas-local" %}
                <div class="christmas__local__gallery__title">
                    <h3 class="christmas__local__gallery__title">GALLERY</h3>
                    <div class="christmas__local__gallery__underline"></div>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-md-12">
                    {% if post.post_type == 'bar' %}
                    <div class="gallery__sidebar__container">
                        {% endif %}
                        <div class="gallery gallery--large {% if page==" christmas-local" %}gallery--large-position{% endif %}">
                            {% for image in images %}
                                <div class="gallery--large__image">
                                    <picture>
                                        <source srcset="{{ image.image.url }}" media="(min-width: 768px)"/>
                                        <img srcset="{% if image.image_mobile.url %}{{ image.image_mobile.url }}{% else %}{{ image.image.url }}{% endif %}"
                                             alt="{{ image.image.alt }}"/>
                                    </picture>
                                </div>
                            {% endfor %}
                        </div>

                        {% if post.post_type == 'bar' %}
                        <div class="gallery__sidebar">
                            {% include 'molecules/sidebar.twig' with {
                                'type': 'location',
                            } %}

                        </div>
                    </div>
                    <script>
                        const blog = () => {
                            document.querySelectorAll('.gallery .gallery--large__image img').forEach(function (item) {
                                item.style.minHeight = document.querySelector('.gallery__sidebar').clientHeight + "px";
                                ;                            })

                        }
                        document.addEventListener('DOMContentLoaded', function () {
                            blog()
                            if (window.jQuery) {
                                jQuery(document).ajaxComplete(function (event, xhr, settings) {
                                    blog()
                                    setTimeout(function () {
                                        blog()
                                    }, 2000)
                                });
                            }
                        });

                        window.addEventListener('resize', blog, true);
                    </script>
                    {% endif %}
                    {% if post.slug == 'christmas-local' %}
                        <div id="counter"></div>
                    {% endif %}
                    {% if images|length > 1 %}
                        <ul class="dots">
                            <li class="dots__arrow dots__arrow--prev">
                                <span class="icon-arrow-left"></span>
                            </li>
                            {% for i in 1..(images|length) %}
                                <li class="dots__single {% if loop.first %}active{% endif %}"
                                    data-gallery-dot="{{ loop.index0 }}"></li>
                            {% endfor %}
                            <li class="dots__arrow dots__arrow--next">
                                <span class="icon-arrow-right"></span>
                            </li>
                        </ul>

                        {#                        <div class="icon-hand-gesture"></div>
                        #}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
